{% extends 'base.html.twig' %}

{% block title %}Dashboard - Standplaner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="bi bi-speedometer2 me-2"></i>
                        Dashboard
                    </h1>
                    <p class="text-muted mb-0">Übersicht der Wahlkampfstände</p>
                </div>
                <div class="mt-3 mt-md-0">
                    <small class="text-muted">Angemeldet als: <strong>{{ user.email }}</strong></small>
                </div>
            </div>

            <!-- Statistik-Kacheln -->
            <div class="row g-4">
                <!-- Gesamt Stände -->
                <div class="col-md-6 col-lg-3">
                    <div class="card bg-primary text-white shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">Gesamt Stände</h5>
                                    <h2 class="mb-0 fw-bold">{{ stats.totalStands }}</h2>
                                    <small class="opacity-75">Alle geplanten Stände</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-calendar-event fs-1 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Besetzte Stände -->
                <div class="col-md-6 col-lg-3">
                    <div class="card bg-success text-white shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">Besetzte Stände</h5>
                                    <h2 class="mb-0 fw-bold">{{ stats.occupiedStands }}</h2>
                                    <small class="opacity-75">≥ 3 Teilnehmer*innen</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-people-fill fs-1 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Unterbesetzte Stände -->
                <div class="col-md-6 col-lg-3">
                    <div class="card bg-warning text-white shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">Unterbesetzte Stände</h5>
                                    <h2 class="mb-0 fw-bold">{{ stats.understaffedStands }}</h2>
                                    <small class="opacity-75">< 3 Teilnehmer*innen</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-exclamation-triangle-fill fs-1 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Auslastung -->
                <div class="col-md-6 col-lg-3">
                    <div class="card bg-info text-white shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-title mb-1">Auslastung</h5>
                                    <h2 class="mb-0 fw-bold">
                                        {% if stats.totalStands > 0 %}
                                            {{ ((stats.occupiedStands / stats.totalStands) * 100)|round }}%
                                        {% else %}
                                            0%
                                        {% endif %}
                                    </h2>
                                    <small class="opacity-75">Besetzte Stände</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-graph-up fs-1 opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-lightning-charge me-2"></i>
                                Schnellaktionen
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                <a href="{{ path('app_participation') }}" class="btn btn-success">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Neue Anmeldung
                                </a>
                                <a href="{{ path('app_campaign_stand_index') }}" class="btn btn-primary">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    Standverwaltung
                                </a>
                                <a href="{{ path('app_participants') }}" class="btn btn-outline-primary">
                                    <i class="bi bi-table me-2"></i>
                                    Teilnehmer-Übersicht
                                </a>
                                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-house me-2"></i>
                                    Zur Startseite
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
