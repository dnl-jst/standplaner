{% extends 'base.html.twig' %}

{% block title %}Standverwaltung - Standplaner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="bi bi-calendar-event me-2"></i>
                        Standverwaltung
                    </h1>
                    <p class="text-muted mb-0">Verwalte alle Wahlkampfstände</p>
                </div>
                <div class="mt-3 mt-md-0">
                    <a href="{{ path('app_campaign_stand_new') }}" class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i>
                        Neuer Stand
                    </a>
                </div>
            </div>

            {% if stands_with_stats is empty %}
                <!-- Keine Stände -->
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                    <h4>Noch keine Stände erstellt</h4>
                    <p class="mb-3">Es wurden noch keine Wahlkampfstände angelegt.</p>
                    <a href="{{ path('app_campaign_stand_new') }}" class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i>
                        Ersten Stand erstellen
                    </a>
                </div>
            {% else %}
                <!-- Stände-Tabelle -->
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col" class="px-3 py-3">
                                            <i class="bi bi-geo-alt me-2"></i>
                                            Ort
                                        </th>
                                        <th scope="col" class="px-3 py-3">
                                            <i class="bi bi-calendar me-2"></i>
                                            Datum & Zeit
                                        </th>
                                        <th scope="col" class="text-center px-3 py-3">
                                            <i class="bi bi-people me-2"></i>
                                            Anmeldungen
                                        </th>
                                        <th scope="col" class="text-center px-3 py-3">
                                            <i class="bi bi-check-circle me-2"></i>
                                            Status
                                        </th>
                                        <th scope="col" class="text-center px-3 py-3">
                                            <i class="bi bi-gear me-2"></i>
                                            Aktionen
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in stands_with_stats %}
                                        {% set stand = item.stand %}
                                        {% set stats = item.stats %}
                                        <tr>
                                            <td class="px-3 py-3">
                                                <div>
                                                    <div class="fw-medium">{{ stand.district }}</div>
                                                    {% if stand.address %}
                                                        <small class="text-muted">{{ stand.address }}</small>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td class="px-3 py-3">
                                                <div>
                                                    <div class="fw-medium">{{ stand.startTime|date('d.m.Y') }}</div>
                                                    <small class="text-muted">
                                                        {{ stand.startTime|date('H:i') }} - {{ stand.endTime|date('H:i') }}
                                                    </small>
                                                </div>
                                            </td>
                                            <td class="text-center px-3 py-3">
                                                <div class="d-flex justify-content-center gap-1">
                                                    {% if stats.attending > 0 %}
                                                        <span class="badge bg-success rounded-pill" title="{{ stats.attending }} Zusagen">
                                                            {{ stats.attending }}
                                                        </span>
                                                    {% endif %}
                                                    {% if stats.maybe > 0 %}
                                                        <span class="badge bg-warning rounded-pill" title="{{ stats.maybe }} Vielleicht">
                                                            {{ stats.maybe }}
                                                        </span>
                                                    {% endif %}
                                                    {% if stats.notAttending > 0 %}
                                                        <span class="badge bg-danger rounded-pill" title="{{ stats.notAttending }} Absagen">
                                                            {{ stats.notAttending }}
                                                        </span>
                                                    {% endif %}
                                                    {% if stats.total == 0 %}
                                                        <span class="text-muted small">Keine</span>
                                                    {% endif %}
                                                </div>
                                            </td>
                                            <td class="text-center px-3 py-3">
                                                {% if stats.isOccupied %}
                                                    <span class="badge bg-success-subtle text-success border border-success-subtle px-2 py-1">
                                                        <i class="bi bi-check-circle-fill me-1"></i>
                                                        Besetzt
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-warning-subtle text-warning border border-warning-subtle px-2 py-1">
                                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                                        Unterbesetzt
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center px-3 py-3">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_campaign_stand_show', {'id': stand.id}) }}"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="Details anzeigen">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_campaign_stand_edit', {'id': stand.id}) }}"
                                                       class="btn btn-outline-secondary btn-sm"
                                                       title="Bearbeiten">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    {% if stats.total == 0 and stand.isFuture %}
                                                        <form method="post" action="{{ path('app_campaign_stand_delete', {'id': stand.id}) }}"
                                                              onsubmit="return confirm('Bist du sicher, dass du diesen Stand löschen möchtest?')"
                                                              style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stand.id) }}">
                                                            <button type="submit" class="btn btn-outline-danger btn-sm border-start-0"
                                                                    title="Stand löschen"
                                                                    style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    {% else %}
                                                        {% set reason = '' %}
                                                        {% if stats.total > 0 %}
                                                            {% set reason = stats.total ~ ' Anmeldung(en) vorhanden' %}
                                                        {% elseif not stand.isFuture %}
                                                            {% if stand.isRunning %}
                                                                {% set reason = 'Stand läuft bereits' %}
                                                            {% else %}
                                                                {% set reason = 'Stand ist bereits beendet' %}
                                                            {% endif %}
                                                        {% endif %}

                                                        <button type="button"
                                                                class="btn btn-secondary btn-sm border-start-0 disabled opacity-50"
                                                                disabled
                                                                title="Stand kann nicht gelöscht werden: {{ reason }}"
                                                                data-bs-toggle="tooltip"
                                                                data-bs-placement="top"
                                                                style="border-top-left-radius: 0; border-bottom-left-radius: 0; cursor: not-allowed;">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="d-flex flex-column flex-sm-row gap-2 mt-4">
                    <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Zurück zum Dashboard
                    </a>
                    <a href="{{ path('app_participants') }}" class="btn btn-outline-primary">
                        <i class="bi bi-people me-2"></i>
                        Teilnehmer-Übersicht
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
// Bootstrap Tooltips aktivieren
document.addEventListener('DOMContentLoaded', function() {
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}
