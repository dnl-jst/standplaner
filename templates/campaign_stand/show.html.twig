{% extends 'base.html.twig' %}

{% block title %}{{ campaign_stand.district }} - Details - Standplaner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="bi bi-geo-alt me-2"></i>
                        {{ campaign_stand.district }}
                    </h1>
                    <p class="text-muted mb-0">
                        {{ campaign_stand.startTime|date('d.m.Y H:i') }} - {{ campaign_stand.endTime|date('H:i') }}
                        {% if campaign_stand.address %}
                            • {{ campaign_stand.address }}
                        {% endif %}
                    </p>
                </div>
                <div class="mt-3 mt-md-0">
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_campaign_stand_edit', {'id': campaign_stand.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>
                            Bearbeiten
                        </a>
                        {% if stats.total == 0 %}
                            <form method="post" action="{{ path('app_campaign_stand_delete', {'id': campaign_stand.id}) }}"
                                  onsubmit="return confirm('Sind Sie sicher, dass Sie diesen Stand löschen möchten?')"
                                  class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campaign_stand.id) }}">
                                <button class="btn btn-danger">
                                    <i class="bi bi-trash me-2"></i>
                                    Löschen
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Statistiken -->
                <div class="col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-graph-up me-2"></i>
                                Statistiken
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="display-6 text-success">{{ stats.attending }}</div>
                                        <small class="text-muted">Zusagen</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="display-6 text-warning">{{ stats.maybe }}</div>
                                        <small class="text-muted">Vielleicht</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="display-6 text-danger">{{ stats.notAttending }}</div>
                                        <small class="text-muted">Absagen</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <div class="display-6 text-primary">{{ stats.total }}</div>
                                        <small class="text-muted">Gesamt</small>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <div class="text-center">
                                {% if stats.isOccupied %}
                                    <span class="badge bg-success fs-6 px-3 py-2">
                                        <i class="bi bi-check-circle-fill me-1"></i>
                                        Stand ist besetzt
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning fs-6 px-3 py-2">
                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                        Stand unterbesetzt
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Details & Teilnehmer -->
                <div class="col-lg-8">
                    {% if campaign_stand.description %}
                        <!-- Beschreibung -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Beschreibung
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">{{ campaign_stand.description|nl2br }}</p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Teilnehmer-Liste -->
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-people me-2"></i>
                                Angemeldete Teilnehmer*innen ({{ participants|length }})
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            {% if participants is empty %}
                                <div class="text-center py-4">
                                    <i class="bi bi-person-plus display-4 text-muted mb-3"></i>
                                    <h5>Noch keine Anmeldungen</h5>
                                    <p class="text-muted mb-3">Für diesen Stand haben sich noch keine Personen angemeldet.</p>
                                    <a href="{{ path('app_participation') }}" class="btn btn-primary">
                                        <i class="bi bi-person-plus me-2"></i>
                                        Zur Anmeldung
                                    </a>
                                </div>
                            {% else %}
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col" class="px-3 py-3">Name</th>
                                                <th scope="col" class="text-center px-3 py-3">Status</th>
                                                <th scope="col" class="px-3 py-3">Anmeldung</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for participant_data in participants %}
                                                <tr>
                                                    <td class="px-3 py-3">
                                                        <div class="fw-medium">{{ participant_data.participant.name }}</div>
                                                        <small class="text-muted">{{ participant_data.participant.email }}</small>
                                                    </td>
                                                    <td class="text-center px-3 py-3">
                                                        {% if participant_data.status == 'attending' %}
                                                            <span class="badge bg-success-subtle text-success border border-success-subtle px-2 py-1">
                                                                <i class="bi bi-check-circle-fill me-1"></i>
                                                                Nimmt teil
                                                            </span>
                                                        {% elseif participant_data.status == 'maybe' %}
                                                            <span class="badge bg-warning-subtle text-warning border border-warning-subtle px-2 py-1">
                                                                <i class="bi bi-question-circle-fill me-1"></i>
                                                                Vielleicht
                                                            </span>
                                                        {% else %}
                                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-2 py-1">
                                                                <i class="bi bi-x-circle-fill me-1"></i>
                                                                Nimmt nicht teil
                                                            </span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="px-3 py-3">
                                                        <small class="text-muted">{{ participant_data.registeredAt|date('d.m.Y H:i') }}</small>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <div class="d-flex flex-column flex-sm-row gap-2 mt-4">
                <a href="{{ path('app_campaign_stand_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>
                    Zurück zur Liste
                </a>
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-primary">
                    <i class="bi bi-speedometer2 me-2"></i>
                    Zum Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
