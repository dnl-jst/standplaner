{% extends 'base.html.twig' %}

{% block title %}{{ stand.district }} - Abgelaufener Stand - Standplaner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <!-- Header -->
            <navigation aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_campaign_stand_index') }}">Standverwaltung</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_finished_stands_index') }}">Abgelaufene Stände</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ stand.district }}</li>
                </ol>
            </navigation>

            <!-- Stand Details -->
            <div class="card border-0 shadow-sm mb-4 opacity-85">
                <div class="card-header bg-secondary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0">
                            <i class="bi bi-geo-alt-fill me-2"></i>
                            {{ stand.district }}
                        </h1>
                        <span class="badge bg-light text-dark">
                            <i class="bi bi-check2-circle me-1"></i>
                            Beendet
                        </span>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row g-4">
                        <!-- Zeitinformationen -->
                        <div class="col-12 col-md-6">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-clock me-2"></i>
                                Zeitraum
                            </h5>
                            <div class="bg-light p-3 rounded">
                                <p class="mb-2">
                                    <strong>Datum:</strong> {{ stand.startTime|date('d.m.Y') }}
                                </p>
                                <p class="mb-2">
                                    <strong>Startzeit:</strong> {{ stand.startTime|date('H:i') }} Uhr
                                </p>
                                <p class="mb-0">
                                    <strong>Endzeit:</strong> {{ stand.endTime|date('H:i') }} Uhr
                                </p>
                            </div>
                        </div>

                        <!-- Standort -->
                        <div class="col-12 col-md-6">
                            <h5 class="text-muted mb-3">
                                <i class="bi bi-pin-map me-2"></i>
                                Standort
                            </h5>
                            <div class="bg-light p-3 rounded">
                                <p class="mb-2">
                                    <strong>Stadtteil:</strong> {{ stand.district }}
                                </p>
                                {% if stand.address %}
                                    <p class="mb-0">
                                        <strong>Adresse:</strong> {{ stand.address }}
                                    </p>
                                {% else %}
                                    <p class="mb-0 text-muted">Keine Adresse angegeben</p>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Beschreibung -->
                        {% if stand.description %}
                            <div class="col-12">
                                <h5 class="text-muted mb-3">
                                    <i class="bi bi-card-text me-2"></i>
                                    Beschreibung
                                </h5>
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-0">{{ stand.description|nl2br }}</p>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Teilnehmer -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0">
                        <i class="bi bi-people me-2"></i>
                        Teilnehmer ({{ stand.participations|length }})
                    </h4>
                </div>

                <div class="card-body">
                    {% if stand.participations is empty %}
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-person-x display-4 mb-3"></i>
                            <h5>Keine Anmeldungen</h5>
                            <p class="mb-0">Für diesen Stand gab es keine Anmeldungen.</p>
                        </div>
                    {% else %}
                        <!-- Statistik -->
                        {% set attendingCount = 0 %}
                        {% set maybeCount = 0 %}
                        {% set notAttendingCount = 0 %}

                        {% for participation in stand.participations %}
                            {% if participation.status == 'attending' %}
                                {% set attendingCount = attendingCount + 1 %}
                            {% elseif participation.status == 'maybe' %}
                                {% set maybeCount = maybeCount + 1 %}
                            {% else %}
                                {% set notAttendingCount = notAttendingCount + 1 %}
                            {% endif %}
                        {% endfor %}

                        <div class="row g-3 mb-4">
                            <div class="col-12 col-sm-4">
                                <div class="bg-success-subtle p-3 rounded text-center">
                                    <i class="bi bi-check-circle-fill text-success display-6"></i>
                                    <h5 class="text-success mt-2 mb-1">{{ attendingCount }}</h5>
                                    <small class="text-success">Teilgenommen</small>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="bg-warning-subtle p-3 rounded text-center">
                                    <i class="bi bi-question-circle-fill text-warning display-6"></i>
                                    <h5 class="text-warning mt-2 mb-1">{{ maybeCount }}</h5>
                                    <small class="text-warning">Vielleicht</small>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4">
                                <div class="bg-danger-subtle p-3 rounded text-center">
                                    <i class="bi bi-x-circle-fill text-danger display-6"></i>
                                    <h5 class="text-danger mt-2 mb-1">{{ notAttendingCount }}</h5>
                                    <small class="text-danger">Abgesagt</small>
                                </div>
                            </div>
                        </div>

                        <!-- Teilnehmer-Liste -->
                        <div class="row g-2">
                            {% for participation in stand.participations %}
                                <div class="col-12 col-sm-6 col-lg-4">
                                    <div class="d-flex align-items-center p-3 border rounded
                                        {% if participation.status == 'attending' %}
                                            bg-success-subtle border-success-subtle
                                        {% elseif participation.status == 'maybe' %}
                                            bg-warning-subtle border-warning-subtle
                                        {% else %}
                                            bg-danger-subtle border-danger-subtle
                                        {% endif %}
                                    ">
                                        <!-- Status-Icon -->
                                        <div class="me-3">
                                            {% if participation.status == 'attending' %}
                                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                                            {% elseif participation.status == 'maybe' %}
                                                <i class="bi bi-question-circle-fill text-warning fs-4"></i>
                                            {% else %}
                                                <i class="bi bi-x-circle-fill text-danger fs-4"></i>
                                            {% endif %}
                                        </div>

                                        <!-- Name und Status -->
                                        <div class="flex-grow-1">
                                            <div class="fw-medium">{{ participation.participant.name }}</div>
                                            <small class="
                                                {% if participation.status == 'attending' %}
                                                    text-success
                                                {% elseif participation.status == 'maybe' %}
                                                    text-warning
                                                {% else %}
                                                    text-danger
                                                {% endif %}
                                            ">
                                                {% if participation.status == 'attending' %}
                                                    Hat teilgenommen
                                                {% elseif participation.status == 'maybe' %}
                                                    Vielleicht
                                                {% else %}
                                                    Hat abgesagt
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
