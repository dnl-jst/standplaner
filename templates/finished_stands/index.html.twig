{% extends 'base.html.twig' %}

{% block title %}Abgelaufene Stände - Standplaner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <!-- Header -->
            <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4">
                <div>
                    <h1 class="h2 mb-1">
                        <i class="bi bi-archive me-2"></i>
                        Abgelaufene Wahlkampfstände
                    </h1>
                    <span class="badge bg-secondary fs-6">{{ finished_stands|length }} Stände</span>
                </div>

                <div>
                    <a href="{{ path('app_campaign_stand_index') }}" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Zur Standverwaltung
                    </a>
                </div>
            </div>

            {% if finished_stands is empty %}
                <!-- Keine abgelaufenen Stände -->
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-archive display-4 text-muted mb-3"></i>
                    <h4>Keine abgelaufenen Stände</h4>
                    <p class="mb-0">Es gibt noch keine abgelaufenen Wahlkampfstände.</p>
                </div>
            {% else %}
                <!-- Abgelaufene Stände Liste -->
                <div class="row g-3">
                    {% for stand in finished_stands %}
                        <div class="col-12">
                            <div class="card border-0 shadow-sm opacity-85">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-12 col-md-8">
                                            <!-- Status Badge -->
                                            <div class="mb-2">
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-check2-circle me-1"></i>
                                                    Beendet
                                                </span>
                                            </div>

                                            <!-- Stand Info -->
                                            <h5 class="mb-2 text-muted">
                                                <i class="bi bi-geo-alt-fill me-2"></i>
                                                {{ stand.district }}
                                            </h5>

                                            <div class="d-flex flex-wrap gap-2 mb-2">
                                                <span class="badge bg-light text-muted border">
                                                    <i class="bi bi-calendar3 me-1"></i>
                                                    {{ stand.startTime|date('d.m.Y') }}
                                                </span>
                                                <span class="badge bg-light text-muted border">
                                                    <i class="bi bi-clock me-1"></i>
                                                    {{ stand.startTime|date('H:i') }} - {{ stand.endTime|date('H:i') }}
                                                </span>
                                            </div>

                                            {% if stand.address %}
                                                <p class="text-muted mb-2 small">
                                                    <i class="bi bi-pin-map me-1"></i>
                                                    {{ stand.address }}
                                                </p>
                                            {% endif %}

                                            <!-- Teilnehmer Statistik -->
                                            <div class="d-flex flex-wrap align-items-center gap-2">
                                                {% set attendingCount = 0 %}
                                                {% set maybeCount = 0 %}
                                                {% set notAttendingCount = 0 %}

                                                {% for participation in stand.participations %}
                                                    {% if participation.status == 'attending' %}
                                                        {% set attendingCount = attendingCount + 1 %}
                                                    {% elseif participation.status == 'maybe' %}
                                                        {% set maybeCount = maybeCount + 1 %}
                                                    {% else %}
                                                        {% set notAttendingCount = notAttendingCount + 1 %}
                                                    {% endif %}
                                                {% endfor %}

                                                <small class="text-muted">
                                                    <i class="bi bi-people me-1"></i>
                                                    {{ stand.participations|length }} Anmeldungen:
                                                </small>

                                                {% if attendingCount > 0 %}
                                                    <span class="badge bg-success-subtle text-success border border-success-subtle">
                                                        <i class="bi bi-check-circle-fill me-1"></i>
                                                        {{ attendingCount }}
                                                    </span>
                                                {% endif %}

                                                {% if maybeCount > 0 %}
                                                    <span class="badge bg-warning-subtle text-warning border border-warning-subtle">
                                                        <i class="bi bi-question-circle-fill me-1"></i>
                                                        {{ maybeCount }}
                                                    </span>
                                                {% endif %}

                                                {% if notAttendingCount > 0 %}
                                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                                                        <i class="bi bi-x-circle-fill me-1"></i>
                                                        {{ notAttendingCount }}
                                                    </span>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <!-- Aktionen -->
                                        <div class="col-12 col-md-4 text-end">
                                            <a href="{{ path('app_finished_stands_show', {id: stand.id}) }}"
                                               class="btn btn-outline-secondary">
                                                <i class="bi bi-eye me-2"></i>
                                                Details anzeigen
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
