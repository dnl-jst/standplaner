{% extends 'base.html.twig' %}

{% block title %}Willkommen - Standplaner{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="text-center">
            <h1 class="display-4 mb-4">
                <i class="bi bi-calendar3"></i>
                Willkommen bei Standplaner
            </h1>
            <p class="lead mb-4">
                Verwalten Sie Ihre Stände und Termine effizient und übersichtlich.
            </p>
        </div>

        {% if app.user %}
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-speedometer2 fs-1 text-primary mb-3"></i>
                            <h5 class="card-title">Dashboard</h5>
                            <p class="card-text">Überblick über Ihre aktuellen Stände und Termine.</p>
                            <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
                                <i class="bi bi-arrow-right"></i>
                                Zum Dashboard
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-plus fs-1 text-success mb-3"></i>
                            <h5 class="card-title">Neuer Stand</h5>
                            <p class="card-text">Erstellen Sie einen neuen Stand oder Termin.</p>
                            <a href="#" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i>
                                Stand erstellen
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <i class="bi bi-info-circle-fill"></i>
                <strong>Willkommen zurück, {{ app.user.email }}!</strong>
                Sie sind erfolgreich angemeldet.
            </div>
        {% else %}
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Anmeldung erforderlich</h5>
                            <p class="card-text">Melden Sie sich an, um Ihre Stände zu verwalten.</p>
                            <a href="{{ path('app_login') }}" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right"></i>
                                Jetzt anmelden
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
