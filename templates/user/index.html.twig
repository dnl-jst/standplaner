{% extends 'base.html.twig' %}

{% block title %}Benutzerverwaltung{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-people"></i> Benutzerverwaltung</h1>
                <div>
                    <a href="{{ path('app_dashboard') }}" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Zurück zum Dashboard
                    </a>
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Neuen Benutzer anlegen
                    </a>
                </div>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    {% if users|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th width="5%">#</th>
                                        <th width="40%">E-Mail</th>
                                        <th width="25%">Rollen</th>
                                        <th width="15%">Erstellt</th>
                                        <th width="15%" class="text-center">Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>
                                                <i class="bi bi-envelope"></i> {{ user.email }}
                                                {% if user.id == app.user.id %}
                                                    <span class="badge bg-info ms-2">Du</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% for role in user.roles %}
                                                    {% if role == 'ROLE_ADMIN' %}
                                                        <span class="badge bg-danger">Administrator</span>
                                                    {% elseif role == 'ROLE_USER' %}
                                                        <span class="badge bg-primary">Benutzer</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ role }}</span>
                                                    {% endif %}
                                                {% endfor %}
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    {% if user.createdAt %}
                                                        <i class="bi bi-calendar3"></i> {{ user.createdAt|date('d.m.Y H:i') }}
                                                    {% else %}
                                                        <i class="bi bi-question-circle"></i> Unbekannt
                                                    {% endif %}
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                                       class="btn btn-sm btn-outline-info"
                                                       title="Anzeigen">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                                       class="btn btn-sm btn-outline-warning"
                                                       title="Bearbeiten">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    {% if user.id != app.user.id %}
                                                        <button type="button"
                                                                class="btn btn-sm btn-outline-danger"
                                                                title="Löschen"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteModal{{ user.id }}">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>

                                        {% if user.id != app.user.id %}
                                            <!-- Delete Modal -->
                                            <div class="modal fade" id="deleteModal{{ user.id }}" tabindex="-1">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">
                                                                <i class="bi bi-exclamation-triangle text-danger"></i>
                                                                Benutzer löschen
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Bist du sicher, dass du den Benutzer <strong>{{ user.email }}</strong> löschen möchtest?</p>
                                                            <p class="text-danger">
                                                                <i class="bi bi-exclamation-triangle"></i>
                                                                <strong>Diese Aktion kann nicht rückgängig gemacht werden!</strong>
                                                            </p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                                Abbrechen
                                                            </button>
                                                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display: inline;">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="bi bi-trash"></i> Löschen
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        Gesamt: <strong>{{ users|length }}</strong> Benutzer
                                    </p>
                                </div>
                                <div class="col-md-6 text-end">
                                    <small class="text-muted">
                                        Du kannst dich nicht selbst löschen
                                    </small>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-muted"></i>
                            <h3 class="mt-3">Noch keine Benutzer vorhanden</h3>
                            <p class="text-muted">Lege den ersten Benutzer an.</p>
                            <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Ersten Benutzer anlegen
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
