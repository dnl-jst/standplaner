{% extends 'base.html.twig' %}

{% block title %}Anmeldung - Standplaner{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-6">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="h2 mb-3">
                    <i class="bi bi-person-plus me-2"></i>
                    Für Wahlkampfstände anmelden
                </h1>
                <p class="text-muted">
                    Gib deinen Namen ein und wähle für jeden Stand aus, ob du teilnehmen möchtest.
                </p>
            </div>

            <!-- Anmeldeformular -->
            <form id="participationForm" method="POST" action="{{ path('app_participation_save') }}">
                <!-- Name eingeben -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-person me-2"></i>
                            Dein Name
                        </h5>
                        <div class="mb-3">
                            <input type="text"
                                   class="form-control form-control-lg"
                                   id="participant_name"
                                   name="participant_name"
                                   placeholder="Vor- und Nachname eingeben..."
                                   required>
                        </div>
                    </div>
                </div>

                <!-- Stände auswählen -->
                {% if stands is empty %}
                    <div class="alert alert-info text-center">
                        <i class="bi bi-calendar-x display-4 text-muted mb-3"></i>
                        <h4>Keine Wahlkampfstände verfügbar</h4>
                        <p class="mb-0">Es sind derzeit keine Wahlkampfstände für die Anmeldung verfügbar.</p>
                    </div>
                {% else %}
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-4">
                                <i class="bi bi-calendar-event me-2"></i>
                                Wahlkampfstände ({{ stands|length }})
                            </h5>

                            <div class="row g-3">
                                {% for stand in stands %}
                                    <div class="col-12">
                                        <div class="border rounded p-3 bg-light">
                                            <!-- Stand-Info -->
                                            <div class="row align-items-center">
                                                <div class="col-12 col-md-8 mb-3 mb-md-0">
                                                    <div class="d-flex flex-column">
                                                        <h6 class="mb-1 fw-bold">
                                                            <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                                            {{ stand.district }}
                                                        </h6>
                                                        <div class="d-flex flex-wrap gap-2 mb-2">
                                                            <span class="badge bg-secondary">
                                                                <i class="bi bi-calendar3 me-1"></i>
                                                                {{ stand.startTime|date('d.m.Y') }}
                                                            </span>
                                                            <span class="badge bg-secondary">
                                                                <i class="bi bi-clock me-1"></i>
                                                                {{ stand.startTime|date('H:i') }} - {{ stand.endTime|date('H:i') }}
                                                            </span>
                                                        </div>
                                                        {% if stand.address %}
                                                            <small class="text-muted">
                                                                <i class="bi bi-pin-map me-1"></i>
                                                                {{ stand.address }}
                                                            </small>
                                                        {% endif %}
                                                    </div>
                                                </div>

                                                <!-- Status-Button -->
                                                <div class="col-12 col-md-4">
                                                    <div class="d-flex justify-content-center justify-content-md-end">
                                                        <button type="button"
                                                                class="btn btn-outline-secondary participation-btn"
                                                                data-stand-id="{{ stand.id }}"
                                                                data-status="unknown">
                                                            <i class="bi bi-question-circle me-2"></i>
                                                            <span class="status-text">Unentschieden</span>
                                                        </button>

                                                        <!-- Hidden Input für Formular -->
                                                        <input type="hidden"
                                                               name="participations[{{ stand.id }}]"
                                                               value=""
                                                               class="participation-input">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>

                    <!-- Absenden Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-check-lg me-2"></i>
                            Anmeldung speichern
                        </button>
                        <div class="mt-3">
                            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>
                                Zurück zur Übersicht
                            </a>
                        </div>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>
</div>

<!-- JavaScript für interaktive Buttons -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Status-Definitionen
    const statusConfig = {
        'unknown': {
            icon: 'bi-question-circle',
            text: 'Unentschieden',
            class: 'btn-outline-secondary',
            value: ''
        },
        'attending': {
            icon: 'bi-check-circle-fill',
            text: 'Nehme teil',
            class: 'btn-success',
            value: 'attending'
        },
        'maybe': {
            icon: 'bi-question-circle-fill',
            text: 'Vielleicht',
            class: 'btn-warning',
            value: 'maybe'
        },
        'not_attending': {
            icon: 'bi-x-circle-fill',
            text: 'Nehme nicht teil',
            class: 'btn-danger',
            value: 'not_attending'
        }
    };

    // Alle Participation-Buttons finden
    const participationButtons = document.querySelectorAll('.participation-btn');

    participationButtons.forEach(button => {
        button.addEventListener('click', function() {
            const currentStatus = this.getAttribute('data-status');
            const standId = this.getAttribute('data-stand-id');
            const hiddenInput = this.parentElement.querySelector('.participation-input');

            // Nächsten Status bestimmen
            let nextStatus;
            switch(currentStatus) {
                case 'unknown':
                    nextStatus = 'attending';
                    break;
                case 'attending':
                    nextStatus = 'maybe';
                    break;
                case 'maybe':
                    nextStatus = 'not_attending';
                    break;
                case 'not_attending':
                    nextStatus = 'unknown';
                    break;
                default:
                    nextStatus = 'attending';
            }

            // Button aktualisieren
            updateButton(this, nextStatus, hiddenInput);
        });
    });

    function updateButton(button, status, hiddenInput) {
        const config = statusConfig[status];

        // Button-Status setzen
        button.setAttribute('data-status', status);

        // CSS-Klassen aktualisieren
        button.className = 'btn participation-btn ' + config.class;

        // Icon und Text aktualisieren
        const icon = button.querySelector('i');
        const text = button.querySelector('.status-text');

        icon.className = 'bi ' + config.icon + ' me-2';
        text.textContent = config.text;

        // Hidden Input aktualisieren
        hiddenInput.value = config.value;
    }

    // Form-Validierung
    const form = document.getElementById('participationForm');
    form.addEventListener('submit', function(e) {
        const nameInput = document.getElementById('participant_name');

        if (!nameInput.value.trim()) {
            e.preventDefault();
            nameInput.focus();
            alert('Bitte gib deinen Namen ein.');
            return;
        }

        // Überprüfen ob mindestens eine Auswahl getroffen wurde
        const inputs = document.querySelectorAll('.participation-input');
        let hasSelection = false;

        inputs.forEach(input => {
            if (input.value && input.value !== '') {
                hasSelection = true;
            }
        });

        if (!hasSelection) {
            const confirmSubmit = confirm('Du hast noch keine Teilnahme ausgewählt. Trotzdem speichern?');
            if (!confirmSubmit) {
                e.preventDefault();
            }
        }
    });
});
</script>

<style>
/* Verbesserung für Touch-Geräte */
.participation-btn {
    min-width: 160px;
    transition: all 0.2s ease-in-out;
}

.participation-btn:hover {
    transform: translateY(-1px);
}

@media (max-width: 767.98px) {
    .participation-btn {
        min-width: 140px;
        font-size: 0.9rem;
    }
}

/* Smooth transitions */
.card {
    transition: transform 0.2s ease-in-out;
}

.border:hover {
    border-color: #0d6efd !important;
}
</style>
{% endblock %}
